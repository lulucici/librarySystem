extends ../layout

block content
    div.ui.tabular.menu
        a.item(href='/admin') 借阅管理
        a.item(href='/admin/appoint') 预约管理
        a.item.active 荐购管理
    div.full.height
        div.toc
            div.ui.vertical.sticky.accordion.menu
                div.item
                    div.ui.icon.input
                        input(type='text', placeholder='搜索')
                        i.search.icon
                a.item 待处理
                a.item 不订购
                a.item 已订购
        div.article
            div.ui.header 基本订购信息
            table.ui.celled.table
                thead
                    tr
                        th 用户
                        th 题名
                        th 作者
                        th 出版信息
                        th 出版年份
                        th ISBN
                        th 荐购日期
                        th 荐购状态
                tbody
                    tr
                        td lulucici
                        td lulucici
                        td lulucici
                        td lulucici
                        td lulucici
                        td lulucici
                        td lulucici
                        td lulucici
            form.ui.form
                h3.ui.header 添加书籍详情
                div.field
                    div.six.fields
                        div.required.field
                            label 数目
                            input(type='text', name='amount', placeholder='数目')

                div.required.field
                    label 摘要
                    textarea
                button.ui.button(type='submit') 确认订购

