extends layout

block content
    //div.ui.tabular.menu
    //    //a.active.item 分类浏览
    //    ////a.item(href='/books/hot') 热门图书
    //    //a.item(href='/books/new') 新书速递

    div.full.height
        include partials/book_list
        div.article
            //div.ui.masthead.vertical.segment
            if category.name
                div.ui.header#navbar= '分类: ' + category.char + ' ' + category.name
                if books
                    div.ui.text.menu#navbar
                        a.header.item(style='padding-left: 0;') 结果
                        a.active.item= count
            table.ui.celled.table
                thead
                    tr
                        th 题名
                        th 作者
                        th 出版方
                        th 出版年份
                        th ISBN
                        th 馆藏
                        th 可借
                if books
                    tbody
                        each book in books
                            //div= book
                            tr
                                td= book.title
                                td= book.author
                                td= book.pub_info
                                td= book.pub_year
                                td= book.isbn
                                td= book.stock
                                td= book.stock - book.lend_count
                    tfoot
                        tr
                            th(colspan= 7)
                                div.ui.right.floated.pagination.menu
                                    if pages.prev.if
                                        a.icon.item(href='/books/'+category.char+'?page='+pages.prev.number)
                                            i.left.chevron.icon
                                    if pages.current
                                        each page in pages.current
                                            if page.active
                                                a.item.active(href='/books/'+category.char+'?page='+page.number)= page.number
                                            else
                                                a.item(href='/books/'+category.char+'?page='+page.number)= page.number
                                    if pages.next.if
                                        a.icon.item(href='/books/'+category.char+'?page='+pages.next.number)
                                            i.right.chevron.icon
