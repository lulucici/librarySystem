extends ../layout

block content
    div.ui.tabular.menu
        a.item(href='/users') 借阅历史
        a.item(href='/users/a_history') 我的预约
        a.item(href='/users/r_history') 我的荐购
        a.item.active 个人设置
    div.full.height
        div.toc
            div.ui.vertical.sticky.accordion.menu
                div.item
                    div.item
                a.item(href='/users/setting') 个人信息
                a.item(href='/users/mailchange') 更改邮箱
                a.active.item 更改密码
        div.article
            div.ui.header 更改密码
            form.ui.form(style='width: 20em;')
                div.field
                    label 当前密码
                    input(type='password')
                div.field
                    label 新密码
                    input(type='password')
                div.field
                    label 确认密码
                    input(type='password')
                button.ui.button(type='submit') 确认更改



