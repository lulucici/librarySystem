extends ../layout

block content
    div.ui.tabular.menu
        a.item(href='/users') 借阅历史
        a.item(href='/users/a_history') 我的预约
        a.item.active 我的荐购
        a.item(href='/users/setting') 个人设置
    div.full.height
        div.toc
            div.ui.vertical.sticky.accordion.menu
                //div.item
                //    div.ui.icon.input
                //        input(type='text', placeholder='搜索')
                //        i.search.icon
                div.item
                    div.item
                a.item(href='/users/r_history?status=0') 待处理
                a.item(href='/users/r_history?status=1') 不订购
                a.item(href='/users/r_history?status=2') 已订购
        div.article
            div.ui.header 荐购状态: 待处理
            table.ui.celled.table
                thead
                    tr
                        th 题名
                        th 作者
                        th 出版方
                        th 出版年份
                        th ISBN
                        th 荐购日期
                        th 荐购状态
                tbody
                    each recommendation in recommendations
                        tr
                            td= recommendation.title
                            td= recommendation.author
                            td= recommendation.pub_info
                            td= recommendation.pub_year
                            td= recommendation.isbn
                            td= recommendation.created_at
                            td= recommendation.status
                tfoot
                    tr
                        th(colspan= 7)
                            div.ui.right.floated.pagination.menu
                                a.icon.item
                                    i.left.chevron.icon
                                a.item 1
                                a.item 2
                                a.item 3
                                a.item 4
                                a.icon.item
                                    i.right.chevron.icon

