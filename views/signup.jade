extends layout

block content

    //Page Contents
    div.pusher
        div.full.height
            div.article
                div.ui.container
                    h1.ui.header 注册
                    div.ui.container
                        if error
                            .error= error
                        form.ui.form(method='post')
                            h4.ui.dividing.header
                            div.field
                                div.four.fields
                                    div.required.field
                                        label 昵称
                                        input(type='text', name='name', placeholder='昵称')
                            div.field
                                div.four.fields
                                    div.required.field
                                        label 邮箱
                                        input(type='text', name='email', placeholder='邮箱')
                            div.field
                                div.four.fields
                                    div.required.field
                                        label 密码
                                        input(type='password', name='password', placeholder='密码')
                            button.ui.button.submit(type='submit') 注册
block script
    script(src='/javascripts/signup.js')
