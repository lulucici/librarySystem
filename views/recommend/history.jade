extends ../layout

block content
    div.ui.tabular.menu
        a.active.item 荐购历史
        a.item(href='/recommend/create') 我要荐购

    div.full.height
        div.article
            table.ui.celled.table
                thead
                    tr
                        th 题名
                        th 作者
                        th 出版方
                        th 出版年份
                        th ISBN
                        th 荐购日期
                        th 荐购状态
                tbody
                    each recommendation in recommendations
                        tr
                            td= recommendation.title
                            td= recommendation.author
                            td= recommendation.pub_info
                            td= recommendation.pub_year
                            td= recommendation.isbn
                            td= recommendation.created_at
                            td= recommendation.status
                tfoot
                    tr
                        th(colspan= 7)
                            //div.ui.icon.input
                            //    input(type='text', placeholder='搜索')
                            //    i.search.icon
                            div.ui.right.floated.pagination.menu
                                a.icon.item
                                    i.left.chevron.icon
                                a.item 1
                                a.item 2
                                a.item 3
                                a.item 4
                                a.icon.item
                                    i.right.chevron.icon

